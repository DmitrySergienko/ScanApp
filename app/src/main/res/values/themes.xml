<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewScanApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_new</item>
        <item name="colorPrimaryVariant">@color/light_grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_new</item>
        <item name="colorSecondaryVariant">@color/light_grey_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/blue_new</item>
        <!-- Customize your theme here. -->
    </style>

    //-----MyTheme Grey
    <style name="MyGreyOriginalTheme" parent="Theme.NewScanApp">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/light_grey_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/light_grey_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGrey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGrey</item>
        <item name="colorAccent">#ef6c00</item>
    </style>
</resources>